<div class="grimwild-form-group">
    <label for="dice">Dice</label>
    <input type="number" id="dice" name="dice" value="{{diceDefault}}" min="0">
</div>
    <h3>Thorns</h3>

    <div class="grimwild-checkbox-group">
        <div class="grimwild-form-group">
            <label for="brawn-marked">Brawn Marked</label>
            <input type="checkbox" id="brawn-marked" name="thorns[brawnMarked]" value="1" {{#if stats.bra.marked}}checked{{/if}}>
        </div>
        <div class="grimwild-form-group">
            <label for="agility-marked">Agility Marked</label>
            <input type="checkbox" id="agility-marked" name="thorns[agilityMarked]" value="1" {{#if stats.agi.marked}}checked{{/if}}>
        </div>
        <div class="grimwild-form-group">
            <label for="bloodied">Bloodied</label>
            <input type="checkbox" id="bloodied" name="thorns[bloodied]" value="1" {{#if isBloodied}}checked{{/if}}>
        </div>
        <div class="grimwild-form-group">
            <label for="wisdom-marked">Wisdom Marked</label>
            <input type="checkbox" id="wisdom-marked" name="thorns[wisdomMarked]" value="1" {{#if stats.wis.marked}}checked{{/if}}>
        </div>
        <div class="grimwild-form-group">
            <label for="presence-marked">Presence Marked</label>
            <input type="checkbox" id="presence-marked" name="thorns[presenceMarked]" value="1" {{#if stats.pre.marked}}checked{{/if}}>
        </div>
        <div class="grimwild-form-group">
            <label for="rattled">Rattled</label>
            <input type="checkbox" id="rattled" name="thorns[rattled]" value="1" {{#if isRattled}}checked{{/if}}>
        </div>
    </div>

<div class="grimwild-form-group">
    <label for="difficulty">Difficulty</label>
    <input type="number" id="difficulty" name="difficulty" value="0" min="0">
</div>

<div class="grimwild-form-group">
    <label>Total</label>
    <span id="total">0</span>
    <input type="hidden" id="totalThorns" name="totalThorns">
</div>
