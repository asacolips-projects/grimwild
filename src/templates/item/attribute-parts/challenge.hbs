{{! Attributes Tab }}
<section
  class='tab attributes {{tab.cssClass}}'
  data-group='primary'
  data-tab='attributes'
>
  {{! As you add new fields, add them in here! }}
  <div class='resource'>
    <label class='resource-label'>{{localize 'GRIMWILD.Item.Challenge.FIELDS.rollFormula.label'}}:</label>
    <span>{{system.formula}}</span>
    <div class='grid grid-4col'>
      <div class='grid-span-1'>
        <label class='resource-label'>{{localize 'GRIMWILD.Item.Challenge.FIELDS.numDice.label'}}</label>
        <input
          type='text'
          name='system.roll.diceNum'
          value='{{system.roll.diceNum}}'
          data-dtype='Number'
        />
      </div>
      <div class='grid-span-1'>
        <label class='resource-label'>{{localize 'GRIMWILD.Item.Challenge.FIELDS.dieSize.label'}}</label>
        <input
          type='text'
          name='system.roll.diceSize'
          value='{{system.roll.diceSize}}'
          data-dtype='String'
        />
      </div>
    </div>

  </div>
</section>