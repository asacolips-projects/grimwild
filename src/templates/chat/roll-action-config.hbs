{{#unless isPrivate}}
<section class="grimwild-chat grimwild-roll {{result}} stroke stroke-top">
  {{#if rolled}}
    <div class="results">
      <h2>{{#if isCut }}
        {{localize (concat "GRIMWILD.Dice.results." rawResult)}} &#8594; 
        {{/if}}
        {{localize (concat "GRIMWILD.Dice.results." result)}}</h2>
      <em>{{stat}}</em>
    </div>
    <div class="dice-tooltip expanded">
      <section class="tooltip-part">
        <div class="dice">
          <ul class="dice-rolls">
            {{#each dice as |die key|}}
              <li class="roll die d6 {{grimwildDie die.result}}">{{die.result}}</li>
            {{/each}}
          </ul>
          {{#each assists}}
            <ul class="dice-rolls">
              <span> &#8594; {{@key}}</span>
              {{#each this as |die key|}}
                <li class="roll die d6 {{grimwildDie die.result}}">{{die.result}}</li>
              {{/each}}
            </ul>
            {{/each}}
          <ul class="dice-rolls">
            {{#each thorns as |die key|}}
              <li class="roll die d8 {{grimwildThorn die.result}}">{{die.result}}</li>
            {{/each}}
          </ul>
        </div>
      </section>
    </div>
    {{#if hasActions}}
    <div class="action-links">
      {{#if (eq result "disaster")}}
      <button data-action="updateSpark"><i class="fas fa-bolt"></i> Take spark</button>
      {{/if}}
    </div>
    {{/if}}
  {{else}}
    <h2>{{localize "GRIMWILD.Dice.isRolling" name=name pool=(localize (concat "GRIMWILD.Stat." stat ".long"))}}</h2>
    <div class="dice-actions">
        <div class="segment">
            {{#if isOwner}}
                <button class="configure" data-action="configureRoll"><i class="fas fa-dice-d6"></i> {{localize "GRIMWILD.Dice.configure"}}</button>
            {{/if}}
            {{#if hasAssistingActor}}
                <button class="assist" data-action="assistRoll" data-actor-id="{{assistingActor.id}}"><i class="fas fa-handshake-angle"></i> {{localize "GRIMWILD.Dice.assist"}}</button>
            {{/if}}
        </div>
                {{#if isGM}}
        <div class="segment difficulty">
                    <label>{{localize "GRIMWILD.Dice.difficulty"}}</label>
                    <button class="option {{#if (eq difficulty 1)}}active{{/if}}" data-action="updateDifficulty" data-difficulty="1">1</button>
                    <button class="option {{#if (eq difficulty 2)}}active{{/if}}" data-action="updateDifficulty" data-difficulty="2">2</button>
                    <button class="option {{#if (eq difficulty 3)}}active{{/if}}" data-action="updateDifficulty" data-difficulty="3">3</button>
        </div>
                {{/if}}
    </div>
  {{/if}}
</section>
{{/unless}}